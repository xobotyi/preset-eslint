{
  "ignorePatterns": [
    "node_modules",
    "build",
    "dist",
    "lib",
    "coverage"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "plugin:prettier/recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "max-len": [
      "error",
      {
        "code": 120,
        "ignoreRegExpLiterals": true
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "printWidth": 120,
        "singleQuote": true,
        "jsxBracketSameLine": true,
        "trailingComma": "all"
      }
    ],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never"
      }
    ],
    "import/no-default-export": "error",
    "import/prefer-default-export": "off",
    "import/no-named-export": "off",
    "no-plusplus": "off",
    "no-param-reassign": "off",
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_"
      }
    ]
  }
}
